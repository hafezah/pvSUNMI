<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sunmi.pocketvendor.activity.pcsbProducts">

    <LinearLayout
        android:onClick="bgClick"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10px"
        android:alpha="1"
        android:background="#7777">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@drawable/loc_rounded">

            <TextView
                android:text="Progresif Products"
                android:textColor="@color/text2"
                android:textStyle="bold"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.9dp"
                android:background="@color/gray1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/lv_topup"
                    android:onClick="pcsbprepaid"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iv_prepaidprod"
                        android:layout_width="200px"
                        android:layout_height="120px"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/progresifp"/>
                    <TextView
                        android:text="Prepaid Topup"
                        android:textColor="@color/text2"
                        android:textStyle="bold"
                        android:textSize="13dp"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lv_zoom"
                    android:onClick="pcsbzoom"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iv_zoomprod"
                        android:layout_width="220px"
                        android:layout_height="140px"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/pzoom"/>
                    <TextView
                        android:text="Prepaid Zoom"
                        android:textColor="@color/text2"
                        android:textStyle="bold"
                        android:textSize="13dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </LinearLayout>



        </LinearLayout>



    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:id="@+id/drawer_mainmenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/nav_toolbar"/>

        <!--HERE-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0c375d"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_mm_merchant"
                android:text="MERCHANT NAME"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"/>
            <TextView
                android:text="Terminal No : 828"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="#fff"
                android:paddingLeft="10dp"
                android:visibility="invisible"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linear_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="#fff">
                <TextView
                    android:text="PRODUCTS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="8dp"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:textColor="#000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp">

                    <LinearLayout
                        android:onClick="powerInstant"
                        android:id="@+id/lv_item1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="90dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/ivPowerinstant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/power"/>
                        <TextView
                            android:id="@+id/tv_item1"
                            android:text="POWERInstant"
                            android:textSize="11dp"
                            android:textColor="@color/fontcolor"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:onClick="progresif"
                        android:id="@+id/lv_item2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="90dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/ivProgresif"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/progresif"/>
                        <TextView
                            android:id="@+id/tv_item2"
                            android:text="Progresif Products"
                            android:textSize="11dp"
                            android:textColor="@color/fontcolor"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:onClick="easi"
                        android:id="@+id/lv_item3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="90dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/ivEasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/easi"/>
                        <TextView
                            android:id="@+id/tv_item3"
                            android:text="EASI Top-Up"
                            android:textSize="11dp"
                            android:textColor="@color/fontcolor"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <LinearLayout
                        android:onClick="itunes"
                        android:id="@+id/lv_item4"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="90dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/iviTunes"
                            android:layout_width="150px"
                            android:layout_height="90px"
                            android:background="@drawable/itunes"/>
                        <TextView
                            android:id="@+id/tv_item4"
                            android:text="iTunes Gift Card(US)"
                            android:textSize="11dp"
                            android:textColor="@color/fontcolor"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:onClick="googleplay"
                        android:id="@+id/lv_item5"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="90dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/ivGoogle"
                            android:layout_width="150px"
                            android:layout_height="90px"
                            android:background="@drawable/google"/>
                        <TextView
                            android:id="@+id/tv_item5"
                            android:text="Google Play Card (US)"
                            android:textSize="11dp"
                            android:textColor="@color/fontcolor"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:onClick="telbruproducts"
                        android:id="@+id/lv_item6"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="90dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/ivTelbru"
                            android:layout_width="150px"
                            android:layout_height="90px"
                            android:background="@drawable/telbru"/>
                        <TextView
                            android:id="@+id/tv_item6"
                            android:text="TelBru Products"
                            android:textSize="11dp"
                            android:textColor="@color/fontcolor"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_officeuse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:onClick="pocketdepo"
                        android:id="@+id/lv_item7"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="90dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="150px"
                            android:layout_height="90px"
                            android:src="@drawable/pocketdepo"/>
                        <TextView
                            android:id="@+id/tv_item7"
                            android:text="Pocket Deposit"
                            android:textSize="11dp"
                            android:textColor="@color/fontcolor"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:onClick="googleplay"
                        android:id="@+id/lv_item8"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="90dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="150px"
                            android:layout_height="90px"/>
                        <TextView
                            android:id="@+id/tv_item8"
                            android:text=""
                            android:textSize="11dp"
                            android:textColor="@color/fontcolor"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lv_item9"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="90dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="150px"
                            android:layout_height="90px"/>
                        <TextView
                            android:id="@+id/tv_item9"
                            android:text=""
                            android:textSize="11dp"
                            android:textColor="@color/fontcolor"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </ScrollView>

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/footer"
            android:layout_alignParentStart="true"
            android:layout_marginStart="161dp"
            android:text="ver 0.0.0"
            android:textSize="11dp"/>

        <TextView
            android:id="@+id/footer"
            android:text="Powered by ThreeG Media Sdn Bhd"
            android:textAlignment="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="#000"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:textSize="11dp"
            android:layout_marginBottom="15dp"/>

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <!--HERE-->

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_mainwithdrawer"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        android:background="@color/white"
        apps:itemTextColor="@color/fontcolor"
        apps:itemIconTint="@color/fontcolor"
        apps:headerLayout="@layout/nav_header"
        apps:menu="@menu/nav_items"/>

</android.support.v4.widget.DrawerLayout>